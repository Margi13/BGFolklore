@using BGFolklore.Models.Calendar.ViewModels
@using BGFolklore.Web.Common
@model PaginatedList<RecurringEventViewModel>
@{
    ViewData["Title"] = "Calendar";
}
<header class="page-header calendar-header">
    <div class="rt-container op-80 bg-brown">
        <h1>Къде да танцувам?</h1>
        <p>Какво по-хубаво от това всички места за танцуванe събрани на едно място?</p>
    </div>
    <div class="nav-container horizontal-top">
        <div class="page-navbar horizontal-navbar">
            <ul class="my-4">
                <li>
                    <a class="nav-link op-80 bg-brown" asp-area="" asp-controller="Calendar" asp-action="UpcomingEvents">Предстоящи събития</a>
                </li>
                <li>
                    <a class="nav-link op-80 bg-brown" asp-area="" asp-controller="Calendar" asp-action="RecurringEvents">Всички места</a>
                </li>
                <li>
                    <a class="nav-link op-80 bg-brown" asp-area="" asp-controller="Calendar" asp-action="AddEvent">Създай ново събитие</a>
                </li>
            </ul>
        </div>
        @*<img src="~/images/map/wholemap.gif" class="nav-area-image" />*@
    </div>
</header>

<section class="calendar-section">
    @*<div>
            Търсачка
        </div>*@
    <table class="calendar-table">
        <thead>
            <tr>
                <th class="no-stilization"></th>
                <th>Град</th>
                <th>Тип</th>
                <th>Име</th>
                <th>Ден</th>
                <th>Час</th>
                <th>За кого е предназначено</th>
                @*<th>Коментар</th>*@
                <th>Рейтинг</th>
                <th class="feedback-col"></th>
            </tr>
        </thead>
        <tbody>
            @Html.DisplayFor(m => m.PaginatedItems)
        </tbody>
    </table>

    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }
    <div class="d-flex justify-content-center mt-3">
        <a asp-action="RecurringEvents"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           class="btn bg-light rounded-circle @prevDisabled">
            <i class="fas fa-chevron-left"></i>
        </a>
        @{
            for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.PageIndex)
                {
                    <a asp-action="UpcomingEvents"
                       asp-route-pageNumber="@i"
                       class="page-number active-page">
                        @i
                    </a>
                }
                else
                {
                    <a asp-action="UpcomingEvents"
                       asp-route-pageNumber="@i"
                       class="page-number">
                        @i
                    </a>
                }
            }
        }
        <a asp-action="RecurringEvents"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           class="btn bg-light rounded-circle @nextDisabled">
            <i class="fas fa-chevron-right"></i>
        </a>
    </div>
</section>

<div id="modal-container">
    <partial name="_MoreInfoBoxPartial" model="@(new FeedbackViewModel())" />
</div>
<div id="feedbacks-container">

</div>

@section CSS {
    <link rel="stylesheet" href="~/css/calendar.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(".stop-parent-onclick")
            .click(function (event) {
                event.stopPropagation();
            })
            .attr('title', '');
        $(".rating-container").show();
    </script>
}
