@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<h1 class="text-center">Регистрация</h1>

<div class="row justify-content-center">
    <div class="col-md-4 mx-auto">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="text-center">Създаване на нов акаунт</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row justify-content-center align-items-center">
                <label asp-for="Input.RoleNameToAdd" class="col-md-5"></label>
                <div class="col">

                    <div class="d-flex flex-row align-items-center ml-4">
                        <input asp-for="Input.RoleNameToAdd" class="form-control w-auto" type="radio" value="@(Constants.UserRoleName)" />
                        <label class="m-0 col-md-12">Обикновен потребител</label>
                    </div>
                    <div class="d-flex flex-row align-items-center ml-4">
                        <input asp-for="Input.RoleNameToAdd" class="form-control w-auto" type="radio" value="@Constants.OrgRoleName" />
                        <label class="m-0 col-md-12">Танцова формация</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.UserName" class="col-md-6"></label>
                <input asp-for="Input.UserName" class="form-control col-md-6" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-between">
                <label asp-for="Input.Email" class="col-md-6"></label>
                <input asp-for="Input.Email" class="form-control col-md-6" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-between">
                <label asp-for="Input.Password" class="col-md-6"></label>
                <input asp-for="Input.Password" class="form-control col-md-6" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-between">
                <label asp-for="Input.ConfirmPassword" class="col-md-6"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control col-md-6" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-danger bg-brown op-80 text-white">Регистрирай</button>
            </div>
        </form>
    </div>
